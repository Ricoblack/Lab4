<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_between_cardView"
    android:padding="6dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="@dimen/radius_cardView"
    app:cardPreventCornerOverlap="true"
    app:cardBackgroundColor="@color/white"
    android:clickable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/cardview_booking_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="2.5"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/home_restaurateur_username_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                android:textSize="16sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/ic_account_circle_black_24dp"
                android:drawablePadding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"

                />

            <TextView
                android:id="@+id/home_restaurateur_hour_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/hh_mm"
                android:textColor="@color/colorAccent"
                android:layout_below="@id/home_restaurateur_username_cardview"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/ic_access_time_black_24dp"
                android:drawablePadding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                />

            <ImageView
                android:id="@+id/cardview_booking_piatto"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cardview_booking_forchetta"
                android:src="@drawable/piatto_300_green"/>


            <TextView
                android:id="@+id/num_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="N"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/cardview_booking_forchetta"
                android:layout_toEndOf="@id/cardview_booking_forchetta"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="21dp"
                />


            <ImageView
                android:id="@+id/cardview_booking_forchetta"
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_forchetta_300_green"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/cardview_booking_coltello"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cardview_booking_piatto"
                android:layout_toEndOf="@id/cardview_booking_piatto"
                android:src="@drawable/ic_coltello_300_green"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/no_additional_notes_in_this_booking"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:minLines="2"
                android:ellipsize="end"
                android:textSize="16dp"
                android:padding="5dp"
                android:drawableLeft="@drawable/ic_assignment_black_24dp"
                android:drawablePadding="5dp"
                />

            <TextView
                android:id="@+id/delete_booking_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/evadi"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@color/colorAccent"/>

        </LinearLayout>



