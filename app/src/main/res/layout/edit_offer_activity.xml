<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="it.polito.mad.insane.lab4.activities.EditOfferActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/edit_offer_layout"
        >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view = "http://schemas.android.com/apk/res-auto"
            android:id="@+id/dailyOfferGeneralInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            android:layout_margin="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/daily_offer_name"
                    android:hint="@string/name_dailyoffer_edit"
                    android:textColorHint="@color/colorAccent"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


                <RelativeLayout
                    android:id="@+id/daily_offer_total_price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_below="@id/daily_offer_name">

                    <TextView
                        android:id="@+id/price_text"
                        android:text="@string/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"
                        android:layout_alignBottom="@id/daily_offer_price"/>

                    <EditText
                        android:id="@+id/daily_offer_price"
                        android:layout_toRightOf="@id/price_text"
                        android:layout_centerVertical="true"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="â‚¬"
                        android:layout_toRightOf="@id/daily_offer_price"
                        android:layout_alignBottom="@id/daily_offer_price"
                        android:layout_margin="4dp"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/daily_offer_description_text"
                    android:hint="@string/description"
                    android:textColorHint="@color/colorAccent"
                    android:inputType="textMultiLine"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/daily_offer_total_price_layout"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/offer_checkable_listview"
            android:layout_below="@id/daily_offer_description_text"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/save_edit_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done_white_24dp"
        app:layout_anchor="@id/edit_offer_layout"
        app:layout_anchorGravity="bottom|right"
        android:layout_margin="16dp"
        app:backgroundTint="@color/colorPrimary"/>

</android.support.design.widget.CoordinatorLayout>
